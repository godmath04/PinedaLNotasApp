<?xml version="1.0" encoding="UTF-8" ?>
<Shell
    x:Class="PinedaLNotasApp.AppShell"
    xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
    xmlns:Views="clr-namespace:PinedaLNotasApp.Views"
    Shell.FlyoutBehavior="Disabled"
    Title="PinedaLNotasApp">

    <TabBar>
        <ShellContent
            Title="Notas"
            ContentTemplate="{DataTemplate Views:NotePage}"
            Icon="{OnPlatform 'icononotas.png'}"
            />

        <ShellContent
            Title="About"
            ContentTemplate="{DataTemplate Views:AboutPage}" 
            Icon="{OnPlatform 'iconoabout.png'}"
            />
    </TabBar>
</Shell>
